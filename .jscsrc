{
	"preset": "wikimedia",

	"disallowSpaceAfterKeywords": [
		"catch",
		"for",
		"if",
		"switch",
		"while"
	],
	"requireSpaceAfterKeywords": [
		"else"
	],
	"disallowSpacesInFunctionExpression": {
		"beforeOpeningRoundBrace": true
	},

	"jsDoc": {
		"checkAnnotations": true,
		"checkTypes": "strictNativeCase"
	},

	"excludeFiles": [
		"node_modules/**",
		"tests/lib/**"
	]
}
